{
  "mcpServers": {
    "zen": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/BeehiveInnovations/zen-mcp-server",
        "zen-mcp-server"
      ],
      "env": {
        "OPENROUTER_API_KEY": "your-api-key-here",
        "DISABLED_TOOLS": "analyze,apilookup,docgen,tracer,testgen,refactor,planner,precommit,thinkdeep,version,consensus,codereview,debug,challenge,chat"
      }
    }
  }
}